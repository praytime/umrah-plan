{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Themes",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["id", "title", "description", "duas"],
    "properties": {
      "id": { "type": "string" },
      "title": { "type": "string" },
      "description": { "type": "string" },
      "suggestions": {
        "type": "array",
        "items": { "type": "string" }
      },
      "duas": {
        "type": "object",
        "required": ["required", "pool", "count"],
        "properties": {
          "required": {
            "type": "array",
            "items": { "type": "string" }
          },
          "pool": {
            "type": "array",
            "items": { "type": "string" }
          },
          "count": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "additionalProperties": false
  }
}
