{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Duas Library",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["id", "type", "translation", "source", "tags"],
    "properties": {
      "id": { "type": "string" },
      "category": {
        "type": "array",
        "items": { "type": "string" }
      },
      "type": { "type": "string", "enum": ["simple", "full", "info"] },
      "label": { "type": "string" },
      "arabic": { "type": "string" },
      "transliteration": { "type": "string" },
      "translation": { "type": "string" },
      "text": { "type": "string" },
      "source": { "type": "string" },
      "ref_url": { "type": "string", "format": "uri" },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "citation": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["quran", "hadith"] }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": false
  }
}
