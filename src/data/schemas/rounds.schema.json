{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rounds Configuration",
  "description": "Schema for mapping ritual rounds/laps to themes.",
  "type": "object",
  "required": ["tawaf", "sai"],
  "properties": {
    "tawaf": {
      "type": "object",
      "required": ["umrah", "nafil"],
      "properties": {
        "umrah": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["number", "theme"],
            "properties": {
              "number": { "type": "integer", "minimum": 1, "description": "Round number (1-7)." },
              "theme": { "type": "string", "description": "Theme ID from themes.json." },
              "title": { "type": "string", "description": "Optional display title override for this round." },
              "description": { "type": "string", "description": "Optional description for this round." }
            },
            "additionalProperties": false
          }
        },
        "nafil": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["number", "theme"],
            "properties": {
              "number": { "type": "integer", "minimum": 1, "description": "Round number (1-7)." },
              "theme": { "type": "string", "description": "Theme ID from themes.json." },
              "title": { "type": "string", "description": "Optional display title override for this round." },
              "description": { "type": "string", "description": "Optional description for this round." }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "sai": {
      "type": "object",
      "required": ["umrah"],
      "properties": {
        "umrah": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["number", "theme"],
            "properties": {
              "number": { "type": "integer", "minimum": 1, "description": "Lap number (1-7)." },
              "theme": { "type": "string", "description": "Theme ID from themes.json." },
              "title": { "type": "string", "description": "Optional display title override for this lap." },
              "description": { "type": "string", "description": "Optional description for this lap." }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
